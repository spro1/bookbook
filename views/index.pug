extends layout

block content
  h1= title
  p Welcome to #{title}
  form#frm_login(action='/auth/login' method='post' name='frm_login')
    .modal-dialog
      .modal-content
        .modal-header
          h1.text-center Node JS Passport Login
        .modal-body
          .form-group
            input#username.form-control.input-lg(type='text' name='username' placeholder='ID' required='required' autocomplete='off')
          .errorTxt
          .form-group
            input#password.form-control.input-lg(type='password' name='password' placeholder='Password' required='required' autocomplete='off')
          .errorTxt
          .form-group
            input.btn.btn-block.btn-lg.btn-default.btn_login(type='submit' value='Login')
            a.btn.btn-block.btn-lg.btn-success.btn_login(href='/auth/login/naver') Naver
